<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado desactivado -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="#000000" /> <!-- Color de fondo (negro) -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas del fondo -->
        </shape>
    </item>
    <!-- Estado activado -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Color de fondo (blanco) -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas del fondo -->
        </shape>
    </item>
</selector>
