<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInputLayout">
        <item name="boxStrokeColor">#bfbdbd</item> <!-- Color del borde -->
        <item name="android:textColor">#bfbdbd</item> <!-- Color de texto mÃ¡s gris -->
    </style>

    <style name="BlackSwitchStyle">
        <!-- Color del interruptor (track) -->
        <item name="android:trackTint">#000000</item>
        <!-- Color del pulgar (thumb) -->
        <item name="android:thumbTint">#FFFFFF</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:hint">Ingrese el motivo de la tardanza</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start|top</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">4</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>
</resources>